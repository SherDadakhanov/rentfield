<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Название..."
                android:textColor="#754803"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/editText6"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:textColorHint="@color/colorPrimary"
                android:layout_alignRight="@+id/textView2"
                android:layout_alignEnd="@+id/textView2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#754803"
                android:layout_marginTop="10dp"
                android:hint="Адрес..."
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:ems="10"
                android:layout_below="@+id/editText6"
                android:id="@+id/editText8"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:textColorHint="@color/colorPrimary"
                android:layout_alignRight="@+id/textView2"
                android:layout_alignEnd="@+id/textView2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:layout_marginTop="10dp"
                android:textColor="#754803"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="Телефон..."
                android:layout_below="@+id/editText8"
                android:id="@+id/editText7"
                android:layout_alignLeft="@+id/editText8"
                android:layout_alignStart="@+id/editText8"
                android:textColorHint="@color/colorPrimary"
                android:layout_alignRight="@+id/editText8"
                android:layout_alignEnd="@+id/editText8" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#754803"
                android:layout_marginTop="10dp"
                android:hint="Информация..."
                android:scrollbars="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:ems="10"
                android:layout_below="@+id/editText7"
                android:id="@+id/editText9"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:textColorHint="@color/colorPrimary"
                android:layout_alignRight="@+id/textView2"
                android:layout_alignEnd="@+id/textView2" />


            <EditText
                android:layout_width="100dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/editText9"
                android:layout_marginTop="10dp"
                android:textColor="#754803"
                android:textSize="25dp"
                android:text="0"
                />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/minus"
                android:layout_alignTop="@+id/price"
                android:layout_toLeftOf="@+id/price"
                android:layout_toStartOf="@+id/price"
                android:background="@drawable/decrease" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/plus"
                android:layout_alignTop="@+id/price"
                android:layout_toRightOf="@+id/price"
                android:layout_toEndOf="@+id/price"
                android:background="@drawable/increase"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/minus"
                android:layout_marginTop="10dp"
                android:src="@drawable/addphoto"
                android:id="@+id/upload"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ok"
                android:text="OK"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/upload"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>