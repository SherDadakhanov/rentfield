<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="150dp"></android.support.v4.view.ViewPager>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_pager">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Информация"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="24sp"
                android:textColor="#754803"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="OLZHA SPORT"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#754803"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_name"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Цена:5000тг"
                android:textColor="#754803"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_price"
                android:textSize="24sp"
                android:layout_below="@+id/info_name"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:text="Тел:8777-777-77-77"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/info_tel"
                android:textSize="24sp"
                android:textColor="#754803"
                android:layout_below="@+id/info_address"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="TextView"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/info_address"
                android:textSize="24dp"
                android:textColor="#754803"
                android:layout_below="@+id/info_price"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:text="Время"
                android:textColor="#754803"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/info_time"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_below="@+id/info_tel"
                android:layout_centerHorizontal="true" />



        </RelativeLayout>

    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/info_fab"
        android:elevation="6dp"
        android:layout_marginRight="5dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/increase"
        app:backgroundTint="@android:color/holo_green_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="5dp"
        android:id="@+id/info_fab1"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/edir"
        android:visibility="invisible"
        app:backgroundTint="@android:color/holo_blue_dark"
        android:layout_above="@+id/info_fab"
        android:layout_alignLeft="@+id/info_fab"
        android:layout_alignStart="@+id/info_fab" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/info_fab2"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/delete"
        android:layout_marginRight="5dp"
        android:visibility="invisible"
        app:backgroundTint="@android:color/holo_blue_dark"
        android:layout_above="@+id/info_fab1"
        android:layout_alignLeft="@+id/info_fab1"
        android:layout_alignStart="@+id/info_fab1" />


</RelativeLayout>
