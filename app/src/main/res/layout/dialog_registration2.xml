<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewreg"
        android:textColor="#ffffff"
        android:text="Регистрация"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:ems="10"
        android:layout_below="@+id/textViewreg"
        android:layout_centerHorizontal="true"
        android:id="@+id/reg_login"
        android:textColorHint="@color/colorPrimary"
        android:hint="Имя..."
        android:textColor="@color/colorPrimary"
        android:background="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/reg_tel"
        android:background="#ffffff"
        android:hint="Телефон..."
        android:textColorHint="@color/colorPrimary"
        android:layout_below="@+id/reg_login"
        android:layout_alignLeft="@+id/reg_login"
        android:textColor="@color/colorPrimary"
        android:layout_alignStart="@+id/reg_login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColorHint="@color/colorPrimary"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="#ffffff"
        android:textColor="@color/colorPrimary"
        android:ems="10"
        android:id="@+id/reg_mail"
        android:hint="Почта..."
        android:layout_below="@+id/reg_tel"
        android:layout_alignLeft="@+id/reg_tel"
        android:layout_alignStart="@+id/reg_tel" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_reg"
        android:textColor="@color/colorPrimary"
        android:background="#ffffff"
        android:layout_below="@+id/reg_mail"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>